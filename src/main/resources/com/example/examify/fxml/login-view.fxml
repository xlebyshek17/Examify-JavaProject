<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examify.ui.controllers.LoginController">
    <children>
        <TextField fx:id="login" layoutX="276.0" layoutY="139.0" promptText="Email or username" />
        <TextField fx:id="password" layoutX="276.0" layoutY="180.0" promptText="Password" />
        <Label layoutX="159.0" layoutY="141.0" text="Email" textFill="#4d0505">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="159.0" layoutY="182.0" text="Password" textFill="#4a0808">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button fx:id="logInButton" layoutX="276.0" layoutY="235.0" mnemonicParsing="false" onAction="#onLogInButtonClick" prefHeight="24.0" prefWidth="171.0" text="Log in" textFill="#650a0a">
         <font>
            <Font name="Gubbi" size="14.0" />
         </font></Button>
        <Hyperlink fx:id="signup" layoutX="348.0" layoutY="342.0" onAction="#onSignUpLinkClick" text="Sign up" />
        <Label layoutX="153.0" layoutY="33.0" opacity="0.72" text="Welcome" textFill="#4a0606">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label layoutX="186.0" layoutY="345.0" text="Don't have an account?" textFill="#430707" />
        <Label layoutX="158.0" layoutY="63.0" text="Sign In" textFill="#510a0a">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
      <Button layoutX="11.0" layoutY="9.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="37.0" prefWidth="77.0" text="Back" textFill="#4a0404">
         <font>
            <Font name="Gargi" size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
