<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examify.ui.controllers.LoginController">
    <children>
        <TextField fx:id="loginField" layoutX="175.0" layoutY="143.0" prefHeight="35.0" prefWidth="230.0" promptText="Email or username">
         <font>
            <Font size="14.0" />
         </font></TextField>
        <PasswordField fx:id="passwordField" layoutX="175.0" layoutY="194.0" prefHeight="35.0" prefWidth="230.0" promptText="Password" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
         <font>
            <Font size="14.0" />
         </font></PasswordField>
        <Button fx:id="logInButton" layoutX="208.0" layoutY="280.0" mnemonicParsing="false" onAction="#onLogInButtonClick" prefHeight="25.0" prefWidth="170.0" text="Log in" textFill="#650a0a">
         <font>
            <Font name="Gubbi" size="14.0" />
         </font></Button>
        <Hyperlink fx:id="signup" layoutX="348.0" layoutY="342.0" onAction="#onSignUpLinkClick" text="Sign up" />
        <Label layoutX="186.0" layoutY="345.0" text="Don't have an account?" textFill="#430707" />
        <Label layoutX="235.0" layoutY="30.0" text="Sign In" textFill="#510a0a">
            <font>
                <Font name="Gubbi" size="30.0" />
            </font>
        </Label>
      <Button layoutX="11.0" layoutY="9.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="35.0" prefWidth="75.0" text="Back" textFill="#4a0404">
         <font>
            <Font name="Gargi" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorField" alignment="CENTER" layoutX="175.0" layoutY="246.0" prefHeight="16.0" prefWidth="230.0" textAlignment="CENTER" textFill="#d90707" />
    </children>
</AnchorPane>
