<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examify.ui.controllers.AddQuestionController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="600.0">
         <items>
            <Label text="Add Question">
               <font>
                  <Font name="Gargi" size="18.0" />
               </font>
            </Label>
         </items>
      </ToolBar>
      <TextField fx:id="questionText" layoutX="198.0" layoutY="78.0" prefHeight="33.0" prefWidth="379.0">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="48.0" layoutY="84.0" text="Question Text:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="48.0" layoutY="138.0" text="Question Type:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ComboBox fx:id="questionTypeComboBox" layoutX="198.0" layoutY="137.0" prefHeight="24.0" prefWidth="206.0" />
       <HBox fx:id="shortAnswerBox" layoutX="48.0" layoutY="195.0" managed="false" visible="false">
           <Label text="Expected Answer:">
            <font>
               <Font size="18.0" />
            </font>
            <HBox.margin>
               <Insets top="5.0" />
            </HBox.margin></Label>
           <TextField fx:id="shortAnswerField" prefHeight="30.0" prefWidth="200.0">
            <font>
               <Font size="18.0" />
            </font>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></TextField>
          <Button mnemonicParsing="false" onAction="#hadleAddOption" text="Add Option">
             <VBox.margin>
                <Insets left="80.0" top="20.0" />
             </VBox.margin>
             <font>
                <Font size="18.0" />
             </font>
            <HBox.margin>
               <Insets left="25.0" />
            </HBox.margin>
          </Button>
       </HBox>
      <HBox fx:id="optionsBox" layoutX="48.0" layoutY="195.0" managed="false" prefHeight="188.0" prefWidth="531.0" visible="false">
         <children>
            <VBox prefHeight="188.0" prefWidth="269.0">
               <children>
                  <Label text="Answer Options:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TableView fx:id="optionsTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="optionColumn" prefWidth="136.0" text="Option" />
                      <TableColumn fx:id="correctColumn" prefWidth="132.0" text="Correct" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox prefHeight="188.0" prefWidth="261.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <TextField fx:id="optionField">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#hadleAddOption" text="Add Option">
                     <VBox.margin>
                        <Insets left="80.0" top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
      <Button layoutX="508.0" layoutY="133.0" mnemonicParsing="false" onAction="#handleSaveButton" text="Save">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
