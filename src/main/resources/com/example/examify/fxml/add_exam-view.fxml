<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examify.ui.controllers.AddExamController">
   <children>
      <ToolBar layoutX="-1.0" prefHeight="44.0" prefWidth="700.0">
         <items>
            <Pane prefHeight="34.0" prefWidth="284.0" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Add Exam" textAlignment="CENTER">
               <font>
                  <Font name="Gargi" size="18.0" />
               </font>
            </Label>
         </items>
      </ToolBar>
      <TextField fx:id="examName" layoutX="211.0" layoutY="68.0" prefHeight="33.0" prefWidth="462.0">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="38.0" layoutY="74.0" text="Exam Name: ">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Spinner fx:id="questionCountSpinner" layoutX="211.0" layoutY="114.0" prefHeight="24.0" prefWidth="85.0" />
      <Label layoutX="38.0" layoutY="115.0" text="Question Count:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="31.0" layoutY="158.0" text="Time Limit (min) :">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="timeLimit" layoutX="211.0" layoutY="152.0" prefHeight="4.0" prefWidth="85.0">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TableView fx:id="questionTable" layoutX="30.0" layoutY="203.0" prefHeight="230.0" prefWidth="641.0">
        <columns>
          <TableColumn prefWidth="224.0" text="Question Text" />
          <TableColumn prefWidth="225.0" text="Correct Answer" />
            <TableColumn prefWidth="191.0" text="Actions" />
        </columns>
      </TableView>
      <Button layoutX="30.0" layoutY="447.0" mnemonicParsing="false" onAction="#addQuestion" prefHeight="37.0" prefWidth="122.0" text="Add Question">
         <font>
            <Font name="Gargi" size="14.0" />
         </font>
      </Button>
      <Button layoutX="549.0" layoutY="447.0" mnemonicParsing="false" onAction="#saveExam" prefHeight="37.0" prefWidth="122.0" text="Save">
         <font>
            <Font name="Gargi" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
