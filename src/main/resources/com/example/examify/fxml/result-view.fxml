<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.examify.ui.controllers.ResultController"
            prefHeight="400.0"
            prefWidth="600.0">

    <VBox alignment="CENTER" spacing="30"
          AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

        <Label text="Egzamin zakończony!"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Gubbi';"
               textFill="#650707"/>

        <Label fx:id="scoreLabel"
               text="Uzyskany wynik: X / Y"
               style="-fx-font-size: 20px; -fx-font-family: 'Gubbi';"
               textFill="#430707"/>

        <Button text="Powrót do menu"
                onAction="#handleReturnToMenu"
                prefWidth="200"
                style="-fx-font-family: 'Gubbi'; -fx-font-size: 14px; -fx-text-fill: #6b0808;" />
    </VBox>
</AnchorPane>
