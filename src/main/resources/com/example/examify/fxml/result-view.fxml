<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.examify.ui.controllers.ResultController"
            prefHeight="400.0"
            prefWidth="600.0">

    <VBox alignment="CENTER" spacing="30"
          AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

        <Label text="Egzamin zakończony!"
               style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <Label fx:id="scoreLabel"
               text="Uzyskany wynik: X / Y"
               style="-fx-font-size: 20px;" />

        <Button text="Powrót do menu"
                onAction="#handleReturnToMenu"
                prefWidth="200"
                style="-fx-font-size: 14px;" />
    </VBox>
</AnchorPane>
